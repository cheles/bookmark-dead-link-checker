{
  "manifest_version": 3,
  "name": "Bookmark Dead Link Checker",
  "version": "1.0",
  "description": "Automatically detect and remove dead bookmarks with user confirmation and backup protection",
  "permissions": [
    "bookmarks",
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Check Bookmarks"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}