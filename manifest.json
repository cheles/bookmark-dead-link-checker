{
  "manifest_version": 3,
  "name": "Bookmark Dead Link Checker",
  "version": "1.0",
  "description": "Automatically detect and remove dead bookmarks",
  "permissions": [
    "bookmarks",
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Check Bookmarks"
  }
}